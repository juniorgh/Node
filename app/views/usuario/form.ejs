<form action="/usuarios/salvar" method="POST" class="form-horizontal" role="form">  
  <div class="form-group">
    <label class="col-sm-2" for="exampleInputEmail1">Email address</label>
    <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
    <input type="email"  name="usuario[email]" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-sm-2" for="exampleInputPassword1">Password</label>
    <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
      <input type="password" name="usuario[senha]" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>
