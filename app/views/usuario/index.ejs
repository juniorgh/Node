<% msg.map(function (_msg) { %>
<div class="alert alert-success">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong>SUCESSO!</strong> <%- _msg %>
</div>
<% }) %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="painel-title">
      Gerenciador de Usuários
    </h3>
  </div>
  <div class="panel-body">
    <fieldset>
      <legend>
        <a href="/usuarios/novo">
        <i class="glyphicon glyphicon-plus-sign">
        </i>
        Add
        </a>
        <a class="btn btn-link" href="/grupos"> 
          <i class="glyphicon glyphicon-user"></i> 
          Gerenciador de grupos
        </a>
      </legend>
      <table class="table table-hover table-bordered table-responsed">
        <thead>
          <tr>
            <th>Usuario</th>
            <th>Grupo</th>
            <th>ações</th>
          </tr>
        </thead>
        <tbody>

        <% usuarios.forEach(function(usuario) { %>
          <tr>
            <td><%- usuario.nome %></td>
            <td> <%- usuario.grupo ? usuario.grupo.nome : '' %></td>
            <td>  
                <a href="/usuarios/<%- usuario._id %>">
                    <button class="btn btn-success"> 
                        <i class="glyphicon glyphicon-eye-open"> 
                        </i> Visualizar  
                    </button>
                </a>
       
                <a href="/usuarios/<%- usuario._id %>/editar"> 
                    <button class="btn btn-info">
                        <i class="glyphicon glyphicon-edit">
                        </i>
                            Editar 
                    </button>
                </a>
                

                <a href="/usuarios/<%- usuario._id %>/excluir"> 
                    <button class="btn btn-danger"> 
                        <i class="glyphicon glyphicon-trash"> 
                        </i> 
                        Excluir
                    </button>
                </a>
            
            </td>
          </tr>
        <% }) %>
        </tbody>
      </table>
    </fieldset>
  </div>
</div>